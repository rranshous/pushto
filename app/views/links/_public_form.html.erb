<%= form_for(@link, role: 'form', url: {action: :public_create}) do |f| %>
  <% if @link.errors.any? %>
    <div class="errors">
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :short_name %>
    <%= f.text_field :short_name, class: 'form-control', placeholder: 'name' %>
  </div>
  <div class="form-group">
    <%= f.label :target_url %>
    <%= f.text_field :target_url, class: 'form-control', placeholder: 'URL' %>
  </div>
  <%= content_tag :button, type: :submit, class: 'btn btn-primary btn-lg' do %>
    Submit
  <% end %>
<% end %>
